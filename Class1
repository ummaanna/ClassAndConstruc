class Pessoa1

class Pessoa2 (var nome: String, var anoNascomento: Int)

class Pessoa3 (var nome: String, var anoNascomento: Int){
    fun saudacao(){
        println("Olá, meu nome é $nome")
    }

} // pessoa 3 tem atributos e comportamento

// principal 
fun main() {
    // estanciando a classe Pessoa3 para criar atributos nos metodos
    val pessoa: Pessoa3 = Pessoa3("Lara", 2012)

    println(pessoa.nome)
    println(pessoa.anoNascomento)
    println(pessoa.saudacao())


    println("----------------")

}
